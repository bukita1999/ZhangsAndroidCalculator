<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <EditText
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:layout_weight="2"
        android:enabled="false"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4"
        >

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="mc"
            android:textSize="40sp"
            android:id="@+id/mCls"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:background="#ffffff"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="mr"
            android:textSize="40sp"
            android:id="@+id/mSave"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:background="#ffffff"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="m+"
            android:textSize="40sp"
            android:id="@+id/mAdd"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:background="#ffffff"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="m-"
            android:textSize="40sp"
            android:id="@+id/mSub"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:background="#ffffff"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4"
        >

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="C"
            android:textSize="40sp"
            android:id="@+id/cls"
            android:layout_weight="1"
            android:background="#ffffff"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="+/-"
            android:textSize="40sp"
            android:id="@+id/change"
            android:layout_weight="1"
            android:background="#ffffff"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="B"
            android:textSize="40sp"
            android:id="@+id/Backspace"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:background="#ffffff"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="/"
            android:textSize="40sp"
            android:id="@+id/div"
            android:layout_weight="1"
            android:background="#ffffff"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:weightSum="4"
        >

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="7"
            android:textSize="30sp"
            android:id="@+id/seven"
            android:layout_weight="1"
            android:background="#ffffcc"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="8"
            android:textSize="30sp"
            android:id="@+id/eight"
            android:layout_weight="1"
            android:background="#ffffcc"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="9"
            android:textSize="30sp"
            android:id="@+id/nine"
            android:layout_weight="1"
            android:background="#ffffcc"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="x"
            android:textSize="40sp"
            android:id="@+id/mul"
            android:layout_weight="1"
            android:background="#ffffff"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="4"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="4"
            android:textSize="30sp"
            android:id="@+id/four"
            android:layout_weight="1"
            android:background="#ffffcc"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="5"
            android:textSize="30sp"
            android:id="@+id/five"
            android:layout_weight="1"
            android:background="#ffffcc"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="6"
            android:textSize="30sp"
            android:id="@+id/six"
            android:layout_weight="1"
            android:background="#ffffcc"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="-"
            android:textSize="40sp"
            android:id="@+id/sub"
            android:layout_weight="1"
            android:background="#ffffff"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="4"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="1"
            android:textSize="30sp"
            android:id="@+id/one"
            android:layout_weight="1"
            android:background="#FFFFCC"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="2"
            android:textSize="30sp"
            android:id="@+id/two"
            android:layout_weight="1"
            android:background="#FFFFCC"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="3"
            android:textSize="30sp"
            android:id="@+id/three"
            android:layout_weight="1"
            android:background="#FFFFCC"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="+"
            android:textSize="40sp"
            android:id="@+id/add"
            android:layout_weight="1"
            android:background="#FFFFFF"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="4"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="( )"
            android:textSize="30sp"
            android:id="@+id/bra"
            android:layout_weight="1"
            android:background="#FFFFCC"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="0"
            android:textSize="30sp"
            android:id="@+id/zero"
            android:background="#FFFFCC"
            android:layout_weight="1" />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="."
            android:textSize="30sp"
            android:id="@+id/spot"
            android:layout_weight="1"
            android:background="#FFFFCC"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="="
            android:textSize="30sp"
            android:id="@+id/equal"
            android:background="#99CCFF"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>